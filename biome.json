{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true,
    "ignore": [".next", "node_modules", "public/files/*"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 310,
    "ignore": [".next", "node_modules", "public/files/*"]
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "trailingCommas": "none",
      "quoteStyle": "single"
    }
  },
  "linter": {
    "ignore": [".next", "node_modules", "public/files/*"],
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
